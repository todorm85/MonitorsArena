@model SitefinityWebApp.Mvc.Models.ProductShowcaseModel

<div class="product-showcase product-list @Model.CssClass">
    @if (!string.IsNullOrEmpty(Model.Title))
    {
        <h2 class="showcase-title">@Model.Title</h2>
    }
    
    <div class="list-group">
        @foreach (var product in Model.Products)
        {
            <div class="list-group-item d-flex justify-content-between align-items-center">
                <div>
                    <h5 class="mb-1">@product.Name</h5>
                    <p class="mb-1">@product.Description</p>
                    <small class="text-muted">Price: $@product.Price.ToString("F2")</small>
                </div>
                <button class="btn btn-primary btn-sm">Add to Cart</button>
            </div>
        }
    </div>
</div>
